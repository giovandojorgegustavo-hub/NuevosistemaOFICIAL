{
  "name": "NubeNova",
  "palette": {
    "ink": "#0b1020",
    "surface": "#0f172a",
    "surfaceAlt": "#101b35",
    "primary": "#1e88ff",
    "primaryGlow": "#6ac1ff",
    "accent": "#17d3a5",
    "warning": "#f59e0b",
    "danger": "#ef4444",
    "muted": "#9aa4b2",
    "white": "#ffffff"
  },
  "typography": {
    "fontFamily": "\"Space Grotesk\", \"Segoe UI\", system-ui, -apple-system, sans-serif",
    "scale": {
      "xs": "0.78rem",
      "sm": "0.9rem",
      "md": "1rem",
      "lg": "1.25rem",
      "xl": "1.6rem",
      "xxl": "2.2rem"
    },
    "weight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "radii": {
    "sm": "8px",
    "md": "14px",
    "lg": "22px"
  },
  "shadows": {
    "sm": "0 6px 18px rgba(2, 12, 27, 0.25)",
    "md": "0 18px 50px rgba(2, 12, 27, 0.35)",
    "glow": "0 0 0 1px rgba(30, 136, 255, 0.2), 0 0 32px rgba(30, 136, 255, 0.35)"
  },
  "grid": {
    "base": 8,
    "maxWidth": "1120px"
  },
  "components": {
    "card": {
      "padding": "28px",
      "border": "1px solid rgba(106, 193, 255, 0.18)"
    },
    "button": {
      "radius": "999px",
      "padding": "10px 22px"
    },
    "input": {
      "radius": "12px",
      "padding": "10px 12px"
    }
  }
}
